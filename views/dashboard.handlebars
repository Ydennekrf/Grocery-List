<div>
<h2 class="head-text">dashboard: your recipes</h2>
<a href="/views/grocery.handlebars"><button type="button" class="btn btn-primary button">Grocery List</button></a>

    <nav>
            {{#if logged_in}}
            <a href="/views/home.handlebars">home</a> |
            <button class="no-button" id="logout">logout</button>
            {{else}}
            <a href="/views/login.handlebars">login</a>
            {{/if}}
    </nav>

{{#if recipes.length}}
</div>

{{#each recipes as |recipe|}}

<div class="recipe col-md-5">
    <p>
        {{recipe.id}}.{{recipe.recipe_name}}
    </p>
</div>
    
{{/each}}

{{else}}
<p class="align-text-center">No current recipes, create a new recipe!</p>

{{/if}}